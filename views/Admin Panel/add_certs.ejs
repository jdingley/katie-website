							<option value="2">TRAININGS/CERTIFICATIONS</option>
							<option value="3">MEMBERSHIPS/AFFILIATIONS</option>
						</select>
					</div>
				</div>
				<div style="margin-top:10px" class="form-group">
					<div class="col-sm-12 controls">
						<button id="btn-login" type="submit" class="btn btn-success">Add Certification</button>
					</div>
				</div>
			</form>
    </div>
  </div>
</body>
