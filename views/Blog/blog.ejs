<% layout("/Layouts/default") -%>
<body>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Blog</h1>
      <br>
        <% for(let i = 0; i < results.length; i++) { %>
            <article>
                <h3><%= results[i].title %></h3>
                <br>
                <h6><b>By:</b> <%= results[i].author %> <b>Posted:</b> <%= results[i].date %></h6>
                <br>
                <p><%= results[i].content.slice(0, 100)%></p>
            </article>
        <% } %>
    </div>
  </div>
</body>
